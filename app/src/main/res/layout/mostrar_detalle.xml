<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:stretchColumns="2">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/purple_500"
                android:paddingLeft="5dp"
                android:showDividers="beginning">

                <com.google.android.material.textfield.TextInputLayout

                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:foregroundGravity="center"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="#1C1A1A"
                    app:endIconTint="#163194"
                    app:helperText="Nombre del Cliente"
                    app:hintTextColor="#0288D1">

                    <TextView

                        android:id="@+id/dtNombre"
                        style="@style/modifiedEditText"
                        android:hint="@string/nombre_cliente"
                        android:maxLines="1"
                        android:textColor="#121010"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_gravity="center|left"
                    android:gravity="left"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="#1C1A1A"
                    app:endIconTint="#163194"
                    app:helperText="@string/idCliente"
                    app:hintTextColor="#0288D1">

                    <TextView
                        android:id="@+id/dtIdCliente"
                        style="@style/modifiedEditText"
                        android:hint="@string/idCliente"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:textSize="14sp"
                        tools:ignore="TextViewEdits" />
                </com.google.android.material.textfield.TextInputLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="5dp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="2"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="#1C1A1A"
                    app:endIconTint="#163194"
                    app:helperText="Colonia"
                    app:hintTextColor="#0288D1">

                    <TextView
                        android:id="@+id/colonia"
                        style="@style/modifiedEditText"
                        android:hint="Id venta"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:textSize="14sp"
                        tools:ignore="TextViewEdits" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="#1C1A1A"
                    app:endIconTint="#163194"
                    app:helperText="@string/Direccion"
                    app:hintTextColor="#0288D1">

                    <TextView

                        android:id="@+id/dtDireccion"
                        style="@style/modifiedEditText"
                        android:hint="@string/Direccion"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:textSize="14sp"
                        tools:ignore="TextViewEdits" />
                </com.google.android.material.textfield.TextInputLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="5dp">

                <com.google.android.material.textfield.TextInputLayout

                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:gravity="left"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="#1C1A1A"
                    app:endIconTint="#163194"
                    app:helperText="@string/telefono"
                    app:hintTextColor="#0288D1">

                    <TextView
                        android:id="@+id/dtTelefono"
                        style="@style/modifiedEditText"
                        android:hint="@string/Numero_de_Telefono"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textSize="14sp"
                        tools:ignore="TextViewEdits" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="#1C1A1A"
                    app:endIconTint="#163194"
                    app:helperText="No. de Venta"
                    app:hintTextColor="#0288D1">

                    <TextView
                        android:id="@+id/IdVenta"
                        style="@style/modifiedEditText"
                        android:hint="Id venta"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:textSize="14sp"
                        tools:ignore="TextViewEdits" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="#1C1A1A"
                    app:endIconTint="#163194"
                    app:helperText="Total Venta"
                    app:hintTextColor="#0288D1">

                    <TextView

                        android:id="@+id/dtTotalVenta"
                        style="@style/modifiedEditText"
                        android:hint="@string/Direccion"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:textSize="20sp"
                        tools:ignore="TextViewEdits" />
                </com.google.android.material.textfield.TextInputLayout>

            </TableRow>

        </TableLayout>


        <LinearLayout
            android:id="@+id/cabecera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tab"
            android:layout_marginTop="20dp"
            android:background="@color/colorFondo"
            android:gravity="right"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom|right"
                android:maxWidth="150dp"
                android:text="PRODUCTO"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text="PRECIO"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text="CANTIDAD"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TOTAL" />

        </LinearLayout>

        <View
            android:id="@+id/centro"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/cabecera"
            android:layout_centerInParent="true"
            android:background="@null" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lista_venta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@id/centro"
            android:layout_marginTop="15dp"
            android:paddingBottom="8dp" />

    </RelativeLayout>

</ScrollView>