<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VistasActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        android:paddingTop="60dp"
        app:tabIconTint="@color/black"
        app:tabIndicatorColor="#00B0FF"
        app:tabInlineLabel="true"
        app:tabRippleColor="#DF0A33"
        app:tabTextColor="@color/colorAccent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/tab"
        android:layout_marginTop="50dp"
        android:gravity="bottom|center"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/lista_clientes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:clickable="true"
            android:cursorVisible="true"
            android:fadeScrollbars="true"
            android:focusable="auto"
            android:focusableInTouchMode="true"
            android:gravity="bottom|center"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="Lista Clientes" />

        <TextView
            android:id="@+id/client_faltante"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:gravity="bottom|center"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="Por Visitar" />

        <TextView
            android:id="@+id/cliente_visitados"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:clickable="true"
            android:fadeScrollbars="true"
            android:filterTouchesWhenObscured="true"
            android:fitsSystemWindows="true"
            android:focusableInTouchMode="false"
            android:gravity="bottom|center"
            android:linksClickable="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="Visitados" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/contenedorFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab">

    </FrameLayout>

</RelativeLayout>