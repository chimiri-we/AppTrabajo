<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.home.DetalleCliente">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_height"
        android:background="@color/purple_500"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:paddingBottom="20dp"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:fitsSystemWindows="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="40dp"
                app:layout_collapseMode="parallax">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Direccion"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="#1C1A1A"
                    app:endIconTint="#163194"
                    app:helperTextEnabled="true"
                    app:helperTextTextAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:hintEnabled="true"
                    app:hintTextColor="#0288D1">

                    <TextView
                        android:id="@+id/tv_direccion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/Direccion"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:textColorHint="@color/black"
                        android:textSize="20sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/Numero_de_Telefono"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="#1C1A1A"
                    app:endIconTint="#163194"
                    app:helperTextEnabled="true"
                    app:hintTextColor="#0288D1">

                    <TextView
                        android:id="@+id/tv_numeroTel"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/Numero_de_Telefono"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"

                        android:textColorHint="#0E1D7F"
                        android:textSize="20sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout

                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/signup_text_margin_top"
                    android:hint="Dia de Visita"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="#1C1A1A"
                    app:endIconTint="#163194"
                    app:hintTextAppearance="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                    app:hintTextColor="#0288D1">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="dia de visita"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:textColorHint="#0E0E0E" />
                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <include layout="@layout/content_detalle" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_Agregar_producto"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:adjustViewBounds="false"
        android:foreground="@drawable/ic_baseline_add_24"
        android:keyboardNavigationCluster="true"
        app:backgroundTint="#A3D74F"
        app:borderWidth="5dp"
        app:elevation="16dp"
        app:layout_anchor="@id/app_bar"
        app:layout_anchorGravity="bottom|right|end"
        app:rippleColor="#FFFBFB"
        tools:ignore="ContentDescription" />



</androidx.coordinatorlayout.widget.CoordinatorLayout>