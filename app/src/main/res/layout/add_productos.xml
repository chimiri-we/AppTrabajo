<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/loginCard"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:layout_marginTop="35dp"
    android:layout_marginBottom="35dp"
    android:background="#A6EDF40E"
    android:elevation="5dp"
    app:cardCornerRadius="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="visible"
        android:weightSum="4">

        <com.google.android.material.textfield.TextInputLayout

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/signup_text_margin_top"
            android:layout_marginBottom="20dp"
            android:hint="Selecciona un producto"
            android:visibility="visible"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#1C1A1A"
            app:endIconTint="#163194"
            app:expandedHintEnabled="true"
            app:helperText="Selecciona un producto"
            app:helperTextEnabled="false"
            app:hintEnabled="true"
            app:hintTextColor="#0288D1">

            <Spinner
                android:id="@+id/spinnerPro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:visibility="visible">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvNombrePro"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="20"
                android:textSize="14sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvPrecio"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_weight="3"
                android:textSize="14sp"
                app:boxBackgroundMode="outline">

            </com.google.android.material.textview.MaterialTextView>
        </LinearLayout>


        <com.google.android.material.textfield.TextInputLayout

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#1C1A1A"
            app:endIconTint="#163194"
            app:hintTextColor="#0288D1">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tvCantidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Agrega las piezas"
                android:inputType="number"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>